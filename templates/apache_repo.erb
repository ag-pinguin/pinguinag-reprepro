# /etc/apache2/conf.d/repos

<Directory "/var/www/repos/<%= @title %>/">
        # We want the user to be able to browse the directory manually
        Options Indexes FollowSymLinks Multiviews
        Order allow,deny
        Allow from all
</Directory>

<Directory "/var/www/repos/<%= @title %>/<%= @dist %>/db/">
        Order deny,allow
        Deny from all
</Directory>

<Directory "/var/www/repos/<%= @title %>/<%= @dist %>/conf/">
        Order deny,allow
        Deny from all
</Directory>

<Directory "/var/www/repos/<%= @title %>/<%= @dist %>/incoming/">
        Order allow,deny
        Deny from all
</Directory>
