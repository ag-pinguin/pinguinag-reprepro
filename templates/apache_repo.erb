# /etc/apache2/conf.d/repos
<Directory "<%= @mainfolder %>">
        Options Indexes FollowSymLinks Multiviews
        Order allow,deny
        Allow from all
</Directory>

<Directory "<%= @repofolder %>/db/">
        Order deny,allow
        Deny from all
</Directory>

<Directory "<%= @repofolder %>/conf/">
        Order deny,allow
        Deny from all
</Directory>

<Directory "<%= @repofolder %>/incoming/">
        Order allow,deny
        Deny from all
</Directory>
